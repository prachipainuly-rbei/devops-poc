from cdb import ue
from cs.tools.batchoperations import BatchOperation


def bfolder_exec(ctx):

    # Ausführung der Operation
    state, failures, successes = BatchOperation.run(ctx.dialog.id)

    # Felder in Maske aktualisieren
    ctx.set("failures", failures)
    ctx.set("successes", successes)

ue.run(bfolder_exec, 'cdbmaskbutton')
