<div class="wf-task" data-task-id="{task_id}">
    <div class="task-title" data-call="getStatusClass">
        <a class="btn btn-mini wf-remove pull-right" role="button" data-on="click|remove" data-if="taskDeletable">
            <img data-src="${options.localres}trash.png" />
        </a>
        <div class="editable title-text text-ellipsis" title="{title}">{title}</div>
    </div>
    <div data-render="info"></div>
    <div class="wf-details">
        <div class="detail-collapse collapse">
            <hr />
            <div data-render="fields"></div>
            <hr data-if="task_extension"/>
            <div class="wf-task-extension-container" data-render="task_extension" data-if="task_extension"></div>
            <hr data-if="constraints"/>
            <div class="wf-constraints" data-render="constraints" data-if="constraints"></div>
            <hr data-if="parameters" />
            <div class="wf-parameters" data-render="parameters" data-if="parameters"></div>
            <hr data-if="forms" />
            <div data-render="forms" data-if="forms"></div>
            <hr data-if="briefcaselinks" />
            <div data-render="briefcaselinks" data-if="briefcaselinks"></div>
        </div>
        <div class="detail-actions">
            <a class="btn btn-mini toggle-details pull-right" role="button" data-toggle="collapse">
                <img data-src="${briefcase_icon}" class="svg-icon has-briefcaselinks" />
                <img data-src="${constraint_icon}" class="svg-icon has-constraints" />
                <img data-src="{task_extension.icon}" class="svg-icon is-signed" data-if="task_extension" data-if="task_extension.icon"/>
                <i class="icon-chevron-down"></i>
                <i class="icon-chevron-up disabled"></i>
            </a>
        </div>
    </div>
</div>
