<div class="wf-form-links">
    <a
        class="btn btn-mini form-action add-form pull-right"
        data-if="addFormUrl"
        title="{addFormLabel}"
    >
        <img data-src="${options.localres}new.png" />
    </a>

    <a
        class="btn btn-mini form-action pull-right"
        data-if="enabled"
        href="{displayFormUrl}"
        title="{displayFormLabel}"
        target="_blank"
    >
        <img data-src="${options.localres}open_externally.png" />
    </a>

    <div class="title-icon">
        <img data-src="${icon}" />
    </div>
    <div class="title-text text-ellipsis muted" title="${label}">${label}</div>
    <div class="no-float"></div>
</div>
