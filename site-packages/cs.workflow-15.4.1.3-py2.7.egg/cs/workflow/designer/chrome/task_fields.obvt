<div class="task-fields">
    <div class="task-description value-row" data-render="description"></div>
    <div class="info-state row-fluid">
        <div class="span6 muted">${deadline_label}</div>
        <div class="span6 muted">${max_duration_label}</div>
    </div>
    <div class="info-state row-fluid value-row">
        <div class="span6 deadline-date">
            <span class="deadline">{deadline}</span>
            <a class="btn btn-mini deadline-action" data-if="modifyUrl">
                <img data-src="${options.localres}calendar.png" />
            </a>
        </div>
        <div class="editable max-duration span6">{max_duration|formatDuration}</div>
    </div>
    <div class="info-state row-fluid">
        <div class="span6 muted">${status_label}</div>
    </div>
    <div class="info-state row-fluid value-row">
        <div class="span6 text-ellipsis" title="{cdb_status_txt}">{cdb_status_txt}</div>
    </div>
    <div data-if="has_finish_option" class="wf-checkbox">
        <label class="checkbox muted">
            <input type="checkbox" data-call="setAttribute" data-field="finish_option">${finish_option_label}
        </label>
    </div>
</div>
