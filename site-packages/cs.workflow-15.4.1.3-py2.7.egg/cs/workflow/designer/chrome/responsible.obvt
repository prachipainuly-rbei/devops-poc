<div class="responsible-icon pull-left">
    <img data-if="picture" data-src="{picture}" />
    <img data-if="!picture" data-src="${options.localres}person.png" />
</div>
<div class="responsible-detail">
    <div class="wf-detail-label">
        <div class="wf-remove-wrapper pull-right" data-if="setResponsibleUrl">
            <a class="btn btn-mini wf-remove" role="button" data-on="click|remove" data-if="name">
                <img data-src="${options.localres}trash.png" />
            </a>
        </div>
        <a
            class="btn btn-mini responsible-action pull-right"
            data-if="setResponsibleUrl"
            data-subject_id="{id1}"
            data-mapped_subject_name="{name}"
            data-subject_type="{subject_type}"
        >
            <img data-src="${options.plugins}catalog/catalog.png" />
        </a>
        <div class="title-text text-ellipsis muted" title="${options.labels.cdb_responsible}">${options.labels.cdb_responsible}</div>
        <div class="no-float"/>
    </div>
    <div class="responsible-name text-ellipsis-break" data-if="name" title="{name}">{name}</div>
</div>
