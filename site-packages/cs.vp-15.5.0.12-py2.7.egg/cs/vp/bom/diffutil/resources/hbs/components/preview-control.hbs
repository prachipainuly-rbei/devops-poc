{{#if showPreviewControls}}
<div class="btn-group">
    <a {{bind-attr class=":btn :btn-mini preview3D:active"
        title="labels.cdbvp_elink_diffutil_open_3d_preview"
        }}
        {{action setPreviewMode "3D"}}
        role="button">3D</a>
    <a {{bind-attr class=":btn :btn-mini preview2D:active"
        title="labels.cdbvp_elink_diffutil_open_2d_preview"
        }}
        {{action setPreviewMode "2D"}}
        role="button">2D</a>

    {{#if csThreedInstalled}}
    <a {{bind-attr
            class=":btn :btn-mini preview3Dcockpit:active"
            href="threedSynchUrl"
            title="labels.cdbvp_elink_diffutil_open_synched_cockpit"
        }}
        role="button"
        target="_threed"
        id="sync-threed-button">
        <img {{bind-attr src="sync3DIcon"}} />
    </a>
    {{/if}}
</div>
<div class="preview-control-label">
    {{toplabel}}
</div>
<div class="refresh pull-left" style="margin-right:10px;" {{bind-attr title="labels.cdbvp_elink_diffutil_refresh"}}>
    <i class="icon-refresh" style="vertical-align: bottom;" {{action 'refreshAll'}}></i>
</div>
{{/if}}
