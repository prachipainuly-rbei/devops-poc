<div class="modal-header">
    {{#each button in header_buttons}}
    <button {{action 'buttonTriggered' button.action}} aria-hidden="true" {{bind-attr class="button.classes"}}>{{button.label}}</button>
  	{{/each}}
    <div class="modal-header-slot">
      {{header}}
    </div>
</div>
<div class="modal-body">
  {{yield}}
</div>
<div class="modal-footer">
  {{footer}}
  {{#each button in footer_buttons}}
    <button {{action 'buttonTriggered' button.action}} aria-hidden="true" {{bind-attr class="button.classes"}}>{{button.label}}</button>
  {{/each}}
</div>

