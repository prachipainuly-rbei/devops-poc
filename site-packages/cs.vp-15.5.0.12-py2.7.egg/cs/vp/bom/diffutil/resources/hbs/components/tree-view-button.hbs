<div class="btn-group pull-right dropdown" {{action addNodeToSelection}}>
    <button {{bind-attr class=":btn :btn-mini :op-button"}} {{action executeOperation}}>
        {{#if selectedOperation}}
            <img class="op-button-icon"{{bind-attr src=selectedOperation.icon}} />{{selectedOperation.label}}
        {{else}}
            {{labels.cdbvp_elink_diffutils_operations}}
        {{/if}}
    </button>
    <button {{bind-attr class=":btn :btn-mini :dropup-button :dropdown-toggle"}} {{action adjustMenu}} data-toggle="dropdown">
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu btn-mini drop-menu">
        {{#if _operations.item.length}}
            <li class="head">{{labels.cdbvp_elink_diffutils_item_ops}}</li>
            {{#each operation in _operations.item}}
                {{view App.TreeViewOperationView operation=operation optype="item"}}
            {{/each}}
       {{/if}}
       {{#if _operations.bom.length}}
           <li class="head">{{labels.cdbvp_elink_diffutils_bom_item_ops}}</li>
           {{#each operation in _operations.bom}}
               {{view App.TreeViewOperationView operation=operation optype="bom"}}
           {{/each}}
       {{/if}}
    </ul>
</div>
<div class="no-float"></div>
