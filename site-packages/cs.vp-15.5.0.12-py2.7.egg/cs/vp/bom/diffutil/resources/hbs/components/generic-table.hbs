<div class="group-label">
{{title}}
</div>
<div class="row-fluid">
	<div class="span12">
	<form class="filter_form">
		{{input type="text" value=filterText class="search_field" placeholder=filter_placeholder}}
	</form>
	</div>
</div>
<div class="row-fluid">
	<div class="span12 table_container">
      {{ember-table 
            columns=columns
            content=content
            selection=selection
            rowHeight=rowHeight
            numFixedColumns=numFixedColumns
        }}
      {{#unless content.length}}
          <div class="alert inplace alert-warning">
              {{errorMessage}}
          </div>
      {{/unless}}
	</div>
</div>