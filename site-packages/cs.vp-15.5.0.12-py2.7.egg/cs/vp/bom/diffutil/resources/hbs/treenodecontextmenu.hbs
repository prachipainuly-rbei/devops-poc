<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li class="head">{{labels.cdbvp_elink_diffutils_item_ops}}</li>
    {{#each operation in view.treeNode.item.operations}}
        <li><a {{bind-attr href="operation.url"}}> <img {{bind-attr src="operation.icon"}}/>{{operation.label}} </a></li>
    {{/each}}
    {{#if view.treeNode.bomOperations.length}}
        <li class="head">{{labels.cdbvp_elink_diffutils_bom_item_ops}}</li>
        {{#each operation in view.treeNode.bomOperations}}
            <li><a {{bind-attr href="operation.url"}}> <img {{bind-attr src="operation.icon"}}/>{{operation.label}} </a></li>
        {{/each}}
    {{/if}}
</ul>
