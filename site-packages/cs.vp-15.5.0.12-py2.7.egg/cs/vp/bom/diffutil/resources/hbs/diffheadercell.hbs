<div {{bind-attr class="view.content.contentPath :ember-table-content-container"}}>
    <span class="ember-table-content">
        <div class="sortIcon" {{action "sortByColumn" target=view}}>
            {{view.sortIcon}}
        </div>
        {{view.content.headerCellName}}

        {{#if view.filterValues}}
            <a href="#" data-toggle="dropdown" class="dropdown pull-right filter-menu" {{action "adjustMenu" target=view}}>
                <span><i class="icon-filter"></i></span>
            </a>
            <ul class="dropdown-menu drop-menu">
                <li>{{input type="checkbox"
                        checked=view.allChecked
                        indeterminate=view.isIndeterminate
                    }}
                    {{labels.cdbvp_elink_diffutil_all}}</li>
                <li class="divider"></li>
                {{#each value in view.filterValues}}
                    <li>{{input type="checkbox" checked=value.checked}}{{value.value}}</li>
                {{/each}}
            </ul>
        {{/if}}
    </span>
</div>
