<div class="diff-table-toolbar">
    <div class="half-column lhs row-fluid">
        <div class="span4">
            {{input type="text" value=filterText  class="search_field"
                placeholder=labels.cdbvp_elink_diffutils_filter}}
        </div>
        <div class="span2">
            <div class="diff-table-filter-btns btn-group">
                {{view "diffTableButton"
                    classNames="show-assemblies-button"
                    title=labels.cdbvp_bom_show_assemblies
                    icon="assembly.png"
                    value=showAssemblies
                }}

                {{view "diffTableButton"
                    title=labels.cdbvp_bom_show_leaves
                    classNames="show-components-button"
                    icon="component.png"
                    value=showLeaves
                }}
            </div>
        </div>
        <div class="span6">
            {{#if filter_txt}}
                <b>Filter:</b> {{filter_txt}}
            {{/if}}
        </div>
    </div>
    <div class="half-column rhs with-padding">
        <button type="button"
            {{bind-attr class=":btn :
            btn-default :link-table-button linked:active"}}
            {{bind-attr title=labels.cdbvp_elink_diffutils_update_table}}
            {{action 'toogleLink'}}
            ><i class="icon-link icon-large"></i></button>
        {{#if hasProducts}}
            {{#if hasVariants}}
                <div class="context-metadata span10 product-div" {{bind-attr title=description}}>
                    {{view Ember.Select
                            class="diff-table-select"
                            content=products
                            selection=product
                            optionLabelPath="content.description"
                            prompt=" "
                            }}

                    {{#unless selectVariant}}
                        <button accesskey="v"
                            {{bind-attr class="modalActive:active: :btn :variant-button" title=labels.cdbvp_elink_diffutils_select_variant}}
                            {{action 'showModalWindow'}}>
                                <img {{bind-attr src=catalogIcon}} ></button>
                    {{/unless}}

                    <span class="variant-description">
                    {{#if variant}}
                        {{variant.description}}
                    {{else}}
                        -
                    {{/if}}
                    </span>
                </div>
            {{/if}}
        {{/if}}
    </div>
</div>
<div class="row-fluid">
    <div class="span12 table_container">

        {{ember-table columns=columns
            content=filteredContent
            selection=selectedItem
            sortAction="sort"
            rowHeight=16
            ignorePart="ignorePart"
            ignoreDifference="ignoreDifference"
            deleteIgnore="deleteIgnore"
        }}

      {{#unless content.length}}
          <div class="alert inplace alert-warning">
              {{errorMessage}}
          </div>
      {{/unless}}
    </div>
</div>
