<div class="row-fluid">
    <div class="span4">
        <div class="tree-view-toolbar">
            <form {{action "searchBOM" this on="submit"}}>
                {{input type="text" value=searchStringValue
                    placeholder=labels.cdbvp_elink_diffutils_search}}
            </form>
        </div>
    </div>

    <div class="span8 tree-view-navigator">
        {{#each treeSearch in sortedTreeSearches}}
            {{#if treeSearch.showNavigation}}
                {{view navigationView treeSearchBinding="treeSearch"
                    classNameBindings="treeSearch.cssClass"
                    classNames="tree-search-navigation"
                }}
            {{/if}}
        {{/each}}
    </div>
</div>
