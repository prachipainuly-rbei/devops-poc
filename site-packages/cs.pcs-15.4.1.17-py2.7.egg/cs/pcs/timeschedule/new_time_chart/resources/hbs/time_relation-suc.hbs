<span {{bind-attr class=":label relation.conflict:conflict:no-conflict"}}>

    {{#if relation.successor}}
      {{#if relation.successor.scheduleContent.delete.inSchedule}}
        <img {{bind-attr src="relation.icon_url"}}>
      {{/if}}
      {{#unless relation.successor.scheduleContent.delete.inSchedule}}
        <img class="clickable" 
          {{bind-attr src="relation.icon_url"}} 
          {{action "fixOther" relation target="view" bubbles=false}}
          {{bind-attr title="view.fixLabel"}}
        >
      {{/unless}}
    {{/if}}
    {{#unless relation.successor}}
      <img class="clickable" 
        {{bind-attr src="relation.icon_url"}} 
        {{action "fixOther" relation target="view" bubbles=false}}
        {{bind-attr title="view.fixLabel"}}
      >
    {{/unless}}
  
    <span>
      {{relation.type_label}}
    
      {{#if relation.successor.index}}
        {{relation.successor.index}}
      {{/if}}
      {{#unless relation.successor.index}}
        &nbsp;
      {{/unless}}
      
      {{relation.minimalGapInDays}}
    </span>
  
  <i class="icon-remove-sign clickable" 
    {{action "deleteRelation" relation target="view" bubbles=false}} 
    {{bind-attr title="relation.sucDelTitle"}}
   ></i>
</span>
  