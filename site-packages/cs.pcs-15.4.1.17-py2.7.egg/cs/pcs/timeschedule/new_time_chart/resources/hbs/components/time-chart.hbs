<div class="time-scale-header-lower-row" {{bind-attr style=settings.scale.rowStyle}}>
  <div class="fix-wraparound">
    {{#each cell in settings.scale.lowerRow}}
      <div {{bind-attr class=":time-scale-header-cell cell.isWeekendDay:weekend-day"}} 
        {{bind-attr style=cell.style}}>
          &nbsp;
        </div>
    {{/each}}
  </div>
</div>
{{#each row in model.rows}}
  {{time-chart-row settings=settings model=row refTable=model}}
{{/each}}
<div id='today_bar'{{bind-attr style=view.todayBarStyle}}></div>
<div id='selected_area'{{bind-attr style=view.selectedAreaStyle}}></div>
{{render 'timeChartBarTooltip'}}

