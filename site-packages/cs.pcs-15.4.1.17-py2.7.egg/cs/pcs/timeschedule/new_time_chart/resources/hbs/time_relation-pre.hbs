<span {{bind-attr class=":label relation.conflict:conflict:no-conflict"}}>
    
    {{#if relation.predecessor}}
      {{#if relation.predecessor.scheduleContent.delete.inSchedule}}
        <img {{bind-attr src="relation.icon_url"}}>
      {{/if}}
      {{#unless relation.predecessor.scheduleContent.delete.inSchedule}}
        <img class="clickable" 
          {{bind-attr src="relation.icon_url"}} 
          {{action "fixOther" relation target="view" bubbles=false}}
          {{bind-attr title="view.fixLabel"}}
        >
      {{/unless}}
    {{/if}}
    {{#unless relation.predecessor}}
      <img class="clickable" 
        {{bind-attr src="relation.icon_url"}} 
        {{action "fixOther" relation target="view" bubbles=false}}
        {{bind-attr title="view.fixLabel"}}
      >
    {{/unless}}
  
    <span>
      {{relation.type_label}}
      
      {{#if relation.predecessor.index}}
        {{relation.predecessor.index}}
      {{/if}}
      {{#unless relation.predecessor.index}}
        &nbsp;
      {{/unless}}
      
      {{relation.minimalGapInDays}}
    </span>
  
  <i class="icon-remove-sign clickable" 
    {{action "deleteRelation" relation target="view" bubbles=false}} 
    {{bind-attr title="relation.preDelTitle"}}
   ></i>
</span>
