{{#if view.hasRelations}}
	{{#if view.editMode}}
	  {{view "timeSuccessorsRelationsEdit"
	      contentBinding='content'
	      relationsBinding='view.value'
	      refTableBinding='refTable'
	      settingsBinding='settings'}}
	{{/if}}
	{{#unless view.editMode}}
	  {{view "timeSuccessorsRelationsDisplay"
	      relationsBinding='view.value'}}
	  <i class="icon-edit relations-edit clickable" {{bind-attr title="controller.labels.op_edit"}}
	  {{action "openEditMode" bubbles=false on="click" target="view"}}></i>
	{{/unless}}
{{/if}}