<div class="left-toolbar">
  <div id="search_filter">
    <div class="input-prepend elink-filter-input">
      <span class="add-on">
        <img {{bind-attr src=labels.filter_img_src}}>
      </span>
      {{input placeholder=labels.cdbpcs_timeschedule_filter value=filterMessage}}
    </div>
  </div>
  <div id="time_info_dropdown_menu">
    <div {{bind-attr class=":btn-group :elink-button-dropdown settings.operations_deactivated:disabled"}}>
	  {{#if settings.operations_deactivated}}
        <a class="btn disabled">
		  <img {{bind-attr alt=settings.firstOperation.iconLabel}}
		  {{bind-attr src=settings.firstOperation.iconUrl}}>
        </a>
      {{else}}
		<a {{bind-attr title=settings.firstOperation.title}}
		  target="_blank"
		  {{bind-attr href=settings.firstOperation.url}}
		  class="btn">
		  <img {{bind-attr alt=settings.firstOperation.iconLabel}}
		  {{bind-attr src=settings.firstOperation.iconUrl}}>
		</a>
	  {{/if}}
	  <button type="button" data-toggle="dropdown"
	    {{bind-attr class=":btn :dropdown-toggle settings.operations_deactivated:disabled"}}>
        <span class="caret"></span>
      </button>
      <ul {{bind-attr class=":dropdown-menu settings.operations_deactivated:disabled"}}>
        {{#each op in settings.ts_ops}}
          <li>
            <a {{bind-attr title=op.tooltip}}
             {{action 'run_operation' op.url target="view" bubbles=false}}>
                <img class="operation_icon" {{bind-attr src=op.iconUrl}}/>
              {{op.title}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="btn-group expand-icon" {{bind-attr title=labels.pcs_expand}}>
    <button type="button" {{bind-attr class=":btn settings.selection.lastSelected::disabled"}} {{action 'expandAction' bubbles=false}}>
      &nbsp;
    </button>
  </div>
  <div class="btn-group reveal-icon" {{bind-attr title=labels.pcs_reveal}}>
    <button type="button" {{bind-attr class=":btn settings.selection.lastSelected::disabled"}} {{action 'revealAction' bubbles=false}}>
      &nbsp;
    </button>
  </div>
  <div {{bind-attr class=":btn-group :refresh-icon"}} {{bind-attr title=labels.cdbpcs_update_schedule}}>
    <button type="button" class="btn" {{action 'refreshAction' bubbles=false}}>
      &nbsp;
    </button>
  </div>
  <div class="btn-group jump-icon" {{bind-attr title=labels.cdbpcs_jump_begining}}>
    <button type="button" {{bind-attr class=":btn settings.selection.lastSelected::disabled"}} {{action 'jumpAction' bubbles=false}}>
      &nbsp;
    </button>
  </div>
  <div class="btn-group time-icon" {{bind-attr title=labels.cdbpcs_gantt_chart_interval_too_small}}>
    <button type="button" {{bind-attr class=":btn"}} {{action 'timeAction' bubbles=false}}>
      &nbsp;
    </button>
  </div>
</div>

<div class="right-toolbar">
  {{base-time-scale-control model=settings.scale}}
</div>
