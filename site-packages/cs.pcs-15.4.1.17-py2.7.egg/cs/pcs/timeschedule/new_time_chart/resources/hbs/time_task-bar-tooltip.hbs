{{#if model}}
    <ul class="chart-tooltip dropdown-menu popover">
      <div class="arrow"></div>
      <li><a>{{labels.cdbpcs_task}}: {{model.scheduleContent.title}}</a></li>
      <li><a>{{model.scheduleContent.startDateStr}} - {{model.scheduleContent.endDateStr}}</a></li>
      <li><a>{{model.scheduleContent.duration}}
          {{#if model.scheduleContent.multipleWorkdays}}
              {{labels.workdays_label}}
          {{else}}
              {{labels.workday_label}}
          {{/if}}
      </a></li>
    </ul>
{{/if}}
