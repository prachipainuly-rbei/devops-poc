<div class="btn-group">
  <button type="button" {{bind-attr class=":btn :predecessors view.predecessorsConflictClass"}} {{bind-attr title=view.predecessorsTitle}}
    {{action "openRelationsLeft" bubbles=false on="click" target="view"}}>
    <i class="icon-angle-left"></i>
  </button>
  <button type="button" {{bind-attr class=":btn :successors view.successorsConflictClass"}} {{bind-attr title=view.successorsTitle}}
    {{action "openRelationsRight" bubbles=false on="click" target="view"}}>
    <i class="icon-angle-right"></i>
  </button>
</div>  