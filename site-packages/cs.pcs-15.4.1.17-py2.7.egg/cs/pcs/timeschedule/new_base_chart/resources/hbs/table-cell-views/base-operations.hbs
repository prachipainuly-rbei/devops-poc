<div class="btn-group dropdown">
    <div class="icon dropdown-toggle operation-icon" data-toggle="dropdown"></div>
    <ul class="dropdown-menu">
        {{#each op in view.value}}
            <li>
                <a {{bind-attr title=op.tooltip}}
                {{action 'run_operation' op.url target="view" bubbles=false}}>
                    <img class="operation_icon" {{bind-attr src=op.iconUrl}}/>
                    {{op.title}}
                </a>
            </li>
        {{/each}}   
    </ul>
</div>