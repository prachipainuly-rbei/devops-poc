<input type="text" 
  {{bind-attr class="view.attr :editable view.editing::invisible"}}
  {{bind-attr value="view.value"}}
  {{bind-attr title="view.title"}}
  {{bind-attr disabled = "view.disabled"}}
>
<div {{bind-attr class=":with-overflow :editable view.editing:invisible view.disabled:readonly-on-selected"}} 
     {{bind-attr title="view.title"}}>
  {{view.value}}&nbsp;
</div>