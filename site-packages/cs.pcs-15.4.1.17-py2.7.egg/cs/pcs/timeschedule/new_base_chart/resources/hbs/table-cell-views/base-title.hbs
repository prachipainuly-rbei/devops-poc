<div class="schedule-table-column icon" {{bind-attr style="view.expandIconStyle"}}>
	{{#if content.scheduleContent.hasChildren}}
	  <div class="clickable" {{action "toggleChildren" content bubbles=false on="click" target="view"}}>
	    <i {{bind-attr class="content.isExpanded:icon-caret-down:icon-angle-right"}}></i>
	  </div>
	{{/if}}
</div>
{{view "base-title-without-expand-icon" columnBinding='column'
						                            chartType=chartType
						                            contentBinding='content'
						                            refTableBinding='refTable'
						                            settingsBinding='settings'
						                            titleBinding='view.title'}}