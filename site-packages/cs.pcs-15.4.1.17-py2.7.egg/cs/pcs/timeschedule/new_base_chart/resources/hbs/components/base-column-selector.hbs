<div class="btn-group btn-group-vertical">
  <a class="btn" {{action 'expandHideColumnsAction' bubbles=false}} href="#">
    {{#if model.globalSettings.columns_collapsed}}
      <i class="icon-double-angle-right" {{bind-attr title=labels.pcs_columns_in}}></i>
    {{/if}}
    {{#unless model.globalSettings.columns_collapsed}}
      <i class="icon-double-angle-left" {{bind-attr title=labels.pcs_columns_out}}></i>
    {{/unless}}
  </a>
  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#" {{bind-attr title=labels.pcs_choose_columns}}>
    <i class="icon-table"></i> 
  </a>
  <ul class="dropdown-menu">
    <ul class="dropdown-menu columns-list" {{bind-attr style='view.ulStyle'}}>
      {{#each column in model._columns}}
        <li {{bind-attr class=':column-selector column.moveable:moveable:fixed'}} {{bind-attr data-name=column.name}}>
          <a href="#">
            <input type="checkbox" 
              {{bind-attr name=column.name}}  
              {{bind-attr checked=column.visible}}
              {{bind-attr disabled=column.always_visible}}>
            <label {{bind-attr for=column.name}}>
              {{column.title}}
            </label>
          </a>
        </li>
      {{/each}}
    </ul>
    <li class="divider"></li>
      <div class="column-widget-buttons">
        <button type="button" class="btn btn-primary pull-left" {{action "saveColumns" bubbles=false}}>
          {{labels.pccl_save}}
        </button>
        <button type="button" class="btn pull-right" {{action "cancelChanges" bubbles=false}}>
          {{labels.pccl_cancel}}
        </button>
      </div>
  </ul>
</div>