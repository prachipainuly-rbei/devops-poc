<div class="time-scale-header" {{bind-attr style=model.style}}>
    <div class="time-scale-header-row time-scale-header-upper-row" {{bind-attr style=model.rowStyle}}>
        <div class="fix-wraparound">
          {{#each cell in model.upperRow}}
              <div class="time-scale-header-cell"
              {{bind-attr style=cell.style}}
              {{action 'zoom_to' cell bubbles=false}}
              {{bind-attr title=cell.title}}>
                {{cell.str}}
              </div>
          {{/each}}
        </div>
    </div>
    <div class="time-scale-header-row time-scale-header-lower-row" {{bind-attr style=model.rowStyle}}>
        <div class="fix-wraparound">
          {{#each cell in model.lowerRow}}
            <div {{bind-attr class=":time-scale-header-cell cell.isWeekendDay:weekend-day"}}
              {{bind-attr style=cell.style}}
              {{action 'zoom_to' cell bubbles=false}}
              {{bind-attr title=cell.title}}>
                {{cell.str}}
              </div>
          {{/each}}
        </div>
    </div>
</div>
