{{#if view.changeable}}
  <input type="text"
       {{bind-attr class=":date :editable view.changeable::disabled"}}
       {{bind-attr value="view.formattedDate"}} tabindex = "0"/>
{{/if}}

{{#unless view.changeable}}
  <input type="text"
       {{bind-attr class=":date view.changeable::disabled"}}
       {{bind-attr value="view.formattedDate"}} disabled="disabled"/>
{{/unless}}
      
