<div class="btn-group">
  <button type="button" class="btn go-left-icon" {{action 'left' bubbles=false}} title="{{unbound labels.cdbpcs_basechart_move_left}}">
    &nbsp;
  </button>
  <button type="button" class="btn today-icon" {{action 'today' bubbles=false}} title="{{unbound labels.cdbpcs_jump_to_today}}">
    &nbsp;
  </button>
  <button type="button" class="btn go-right-icon" {{action 'right' bubbles=false}} title="{{unbound labels.cdbpcs_basechart_move_right}}">
    &nbsp;
  </button>
</div>
<div class="btn-group">
  <button type="button" {{bind-attr class=":btn :zoom-in-icon model.zoomInDisabled:disabled"}} 
    {{action 'zoomin' bubbles=false}} title="{{unbound labels.pcs_enlarge}}">
    &nbsp;
  </button>
  <button type="button" {{bind-attr class=":btn :zoom-out-icon model.zoomOutDisabled:disabled"}} 
    {{action 'zoomout' bubbles=false}} title="{{unbound labels.pcs_reduce}}">
    &nbsp;
  </button>
</div>